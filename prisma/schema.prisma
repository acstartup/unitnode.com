generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  companyName   String?
  password      String
  role          String     @default("property_manager")
  emailVerified DateTime?
  isActive      Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  properties    Property[]
}

model Property {
  id         String   @id @default(cuid())
  address    String
  mainTenant String   @default("N/A")
  mainTenantPhone String?
  rent       Float    @default(0)
  occupied   Boolean  @default(false)
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  ownerEmail String?
  ownerName  String?
  ownerPhone String?
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
